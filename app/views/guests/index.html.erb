<h1>Listing Guests</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Phone number</th>
      <th>Address</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @guests.each do |guest| %>
      <tr>
        <td><%= guest.first_name %></td>
        <td><%= guest.last_name %></td>
        <td><%= guest.phone_number %></td>
        <td><%= guest.address %></td>
        <td><%= guest.email %></td>
        <td><%= link_to 'Show', guest %></td>
      </tr>
    <% end %>
  </tbody>
</table>
