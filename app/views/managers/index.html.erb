<h1>Listing Managers</h1>

<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Phone number</th>
        <th>Address</th>
        <th>Email</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @managers.each do |manager| %>
        <tr>
          <td><%= manager.first_name %>
          <td><%= manager.last_name %>
          <td><%= manager.phone_number %>
          <td><%= manager.address %>
          <td><%= manager.email %>
          <td><%= link_to 'Show', manager %></td>
          <td><%= link_to 'Edit', edit_manager_path(manager) %></td>
          <td><%= link_to 'Destroy', manager, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'New Manager', new_manager_path %>
