#owl-demo .item img{
  display: block;
  width: 10% !important;
  height: 10% !important;
}

.jumbotron {
  position: relative;
  background: #000 url("<%= asset_path("restaurant1.jpg") %>") center center;
  width: 100%;
  height: 100%;
  background-size: cover;
  overflow: hidden;
  color: #FFF;
  background-repeat: no-repeat;
}

.jumbotron.restaurant {
  background: #000 url("<%= asset_path("restaurant.png") %>") center center;
  background-repeat: no-repeat;
  background-size: cover;
}

.welcome-header {
  font-size: 35px;
  color: #E0E0E0;
}
